extends layout.pug
block breadcrumb
  li
    a(href='/') Index
  li.is-active
    a(href='#') Users
block content
  section.section
    .container
      h1.title= title
      table.table
        thead
          tr
            th Id
            th Name
            th Email
        tbody
          each user in users
            tr
              td
                a(href=`/users/${user.id}`)= user.id
              td= user.name
              td= user.credentials.email
