extends layout.pug
block breadcrumb
  li
    a(href='/') Index
  li.is-active
    a(href='#') Entities
block content
  section.section
    .container
      h1.title= title
      table.table
        thead
          tr
            th Id
            th Name
        tbody
          each entity in entities
            tr
              td
                a(href=`/entities/${entity.id}`)= entity.id
              td= entity.name
