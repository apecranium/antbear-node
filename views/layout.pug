doctype html
html(lang='en-us')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.css')
    link(rel='shortcut icon', href='/static/favicon.ico')
    title #{title} / antbear.xyz
  body
    section.hero.is-primary.is-bold
      .hero-body
        .container
          h1.title #[a.has-text-white(href='/') #[img(style='fill:currentColor;height:48px;width:48px;vertical-align:middle', src='/static/anteater.svg')] antbear.xyz]
          nav.breadcrumb
            ul
              block breadcrumb
    block content
    footer.footer
      .content.has-text-centered
        p &copy; 2019 Ryan Wildes. View source at #[a(href='https://github.com/apecranium/galaxy-express') GitHub].
        p Icon by #[a(href='https://www.flaticon.com/authors/freepik') Freepik].
